<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_link_mic_new_content_bg"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <TextView
        android:id="@+id/tv_room_stream_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/livelinkmicnew_tv_generate_or_input_play_url"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/tv_room_btn_normal_url"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_link_mic_new_btn_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/livelinkmicnew_tv_play_default_url"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
        android:id="@+id/room_et_input_roomid"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_link_mic_new_input_url_bg"
        android:hint="@string/livelinkmicnew_tv_please_input_room_id"
        android:imeOptions="actionGo"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:inputType="number|textUri"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textColorHint="#ff6b82a8" />

    <EditText
        android:id="@+id/room_et_input_userid"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_link_mic_new_input_url_bg"
        android:hint="@string/livelinkmicnew_tv_please_input_user_id"
        android:imeOptions="actionGo"
        android:inputType="number|textUri"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textColorHint="#ff6b82a8" />

    </LinearLayout>

    <ImageView
        android:id="@+id/room_btn_qr_code_scan"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/live_link_mic_new_ic_qcode" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_link_mic"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/room_tv_link_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/line_btn"
            android:textSize="12sp"
            android:text="@string/livelinkmicnew_tv_enable_realtime_play" />

        <CheckBox
            android:id="@+id/room_cb_link_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:button="@drawable/live_link_mic_new_bg_checkbox" />

    </LinearLayout>

    <Button
        android:id="@+id/room_btn_play"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_link_mic_new_btn_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/livelinkmicnew_tv_start_play"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/room_btn_close"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_link_mic_new_btn_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/livelinkmicnew_btn_cancel"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>