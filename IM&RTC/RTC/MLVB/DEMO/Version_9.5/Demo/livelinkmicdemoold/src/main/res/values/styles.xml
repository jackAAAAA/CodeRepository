<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar">
    </style>

    <style name="MlvbRoomSettingDlg" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--rtmp room -->
    <style name="MlvbRtmpRoomActivityTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="MlvbRtmpRoomDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert" />

    <!-- Input dialog theme. -->
    <style name="MlvbInputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorControlNormal">@color/mlvb_color_accent</item>
        <item name="android:textColorHint">@color/mlvb_c9</item>
        <item name="colorControlActivated">@color/mlvb_color_accent</item>
    </style>

    <!--BeautyPanelStyleStart-->
    <style name="MlvbBeautyTheme" parent="BeautyPanelStyle">
        <item name="beautyPanelColorPrimary">@color/mlvb_color_accent</item>
    </style>
    <!--BeautyPanelStyleEnd-->
</resources>
