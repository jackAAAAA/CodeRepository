<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="live_action_sheet_theme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Input dialog theme. -->
    <style name="LiveInputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TUILiveDialogFragment" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="TUILiveDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert"/>

    <style name="TUILiveRoomLinkMic">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TUILiveVoiceRoomCreateRadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="TUILiveCircleImageView">
        <attr format="dimension" name="tui_civ_border_width"/>
        <attr format="color" name="tui_civ_border_color"/>
        <attr format="boolean" name="tui_civ_border_overlay"/>
        <attr format="color" name="tui_civ_circle_background_color"/>
    </declare-styleable>

    <!-- 飘星自定义属性 -->
    <declare-styleable name="TUILiveRoomHeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>

    <style name="LiveActionSheetDialogStyle" parent="android:Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>



    <!-- 短视频录制主题UI配置-->
    <style name="BeautyPanelStyle">
        <!-- 美颜面板 -->
        <item name="beautyPanelColorPrimary">@color/beauty_color_red</item>
        <item name="beautyPanelSmoothIcon">@drawable/beauty_ic_smooth</item>
        <item name="beautyPanelNaturalIcon">@drawable/beauty_ic_natural</item>
        <item name="beautyPanelPituIcon">@drawable/beauty_ic_pitu</item>
        <item name="beautyPanelWhiteIcon">@drawable/beauty_ic_white</item>
        <item name="beautyPanelRuddyIcon">@drawable/beauty_ic_ruddy</item>
        <item name="beautyPanelBigeyeIcon">@drawable/beauty_ic_bigeye</item>
        <item name="beautyPanelFaceslimIcon">@drawable/beauty_ic_faceslim</item>
        <item name="beautyPanelFacevIcon">@drawable/beauty_ic_facev</item>
        <item name="beautyPanelChinIcon">@drawable/beauty_ic_chin</item>
        <item name="beautyPanelFaceshortIcon">@drawable/beauty_ic_face_short</item>
        <item name="beautyPanelNoseslimIcon">@drawable/beauty_ic_noseslim</item>
        <item name="beautyPanelEyeLightenIcon">@drawable/beauty_ic_eye_bright</item>
        <item name="beautyPanelToothWhiteIcon">@drawable/beauty_ic_tooth_white</item>
        <item name="beautyPanelPouchRemoveIcon">@drawable/beauty_ic_pouch_remove</item>
        <item name="beautyPanelSmileLinesRemoveIcon">@drawable/beauty_ic_smile_lines</item>
        <item name="beautyPanelWrinkleIcon">@drawable/beauty_ic_wrinkles</item>
        <item name="beautyPanelForeheadIcon">@drawable/beauty_ic_forehead</item>
        <item name="beautyPanelEyeDistanceIcon">@drawable/beauty_ic_eye_distance</item>
        <item name="beautyPanelEyeAngleIcon">@drawable/beauty_ic_eye_angle</item>
        <item name="beautyPanelMouthShapeIcon">@drawable/beauty_ic_mouse_shape</item>
        <item name="beautyPanelNoseWingIcon">@drawable/beauty_ic_nose_wing</item>
        <item name="beautyPanelNosePositionIcon">@drawable/beauty_ic_nose_position</item>
        <item name="beautyPanelMouseWidthIcon">@drawable/beauty_ic_mouse_width</item>
        <item name="beautyPanelFaceShapeIcon">@drawable/beauty_ic_face_shape</item>
    </style>

    <style name="TRTCVoiceRoomDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="TRTCVoiceRoomInputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TRTCVoiceRoomButtonStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="BeautyLoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TUILiveScenesTabLayoutStyle">
        <item name="android:textSize">16.3sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_font_color</item>
    </style>
</resources>