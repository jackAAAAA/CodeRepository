<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_link_mic_new_content_bg">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/livepusher_ibtn_back"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:paddingTop="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="17dp"
            android:src="@drawable/live_link_mic_new_ic_back" />

        <TextView
            android:id="@+id/livepusher_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/livelinkmicnew_tv_title_v2"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/livepusher_ibtn_qrcode"
            android:layout_width="36dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:paddingLeft="18dp"
            android:paddingTop="17dp"
            android:paddingRight="6dp"
            android:paddingBottom="17dp"
            android:src="@drawable/live_link_mic_new_ic_qr_code_btn"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/livepusher_ibtn_show_log"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/livepusher_ibtn_qrcode"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:paddingLeft="17dp"
            android:paddingTop="17dp"
            android:paddingRight="6dp"
            android:paddingBottom="17dp"
            android:src="@drawable/live_link_mic_new_ic_loginfo"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_actionbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.tencent.liteav.demo.livelinkmicnew.widget.MainItemRenderView
                android:id="@+id/live_render_user_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#717371" />

            <com.tencent.liteav.demo.livelinkmicnew.widget.MainItemRenderView
                android:id="@+id/live_render_user_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.tencent.liteav.demo.livelinkmicnew.widget.MainItemRenderView
                android:id="@+id/live_render_user_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#717371" />

            <com.tencent.liteav.demo.livelinkmicnew.widget.MainItemRenderView
                android:id="@+id/live_render_user_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.tencent.liteav.demo.livelinkmicnew.widget.MainItemRenderView
                android:id="@+id/live_render_user_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#717371" />

            <com.tencent.liteav.demo.livelinkmicnew.widget.MainItemRenderView
                android:id="@+id/live_render_user_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
