<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tencent.liteav.demo.videoediter"
    android:versionCode="1"
    android:versionName="1.0">

    <application>
        <activity
            android:name=".TCVideoPickerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TCVideoEditerActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/UGCEditEditerActivityTheme">
            <intent-filter>
                <action android:name="com.tencent.liteav.demo.videoediter" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TCVideoCutActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:theme="@style/UGCEditEditerActivityTheme">
            <intent-filter>
                <action android:name="com.tencent.liteav.demo.videocut" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TCVideoEffectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCEditEditerActivityTheme" />

        <activity
            android:name=".TCPictureJoinActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/UGCEditPictureTransitionActivityStyle">
            <intent-filter>
                <action android:name="com.tencent.liteav.demo.picturejoin" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TCEditPreviewActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>