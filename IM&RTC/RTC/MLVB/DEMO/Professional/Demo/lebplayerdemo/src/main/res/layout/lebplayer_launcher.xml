<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lebplayer_content_bg"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <include
        layout="@layout/lebplayer_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/lebplayer_have_url"
        android:textColor="#ff6b82a8"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/lebplayer_et_input_url"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lebplayer_input_url_bg"
        android:hint="@string/lebplayer_intput_url"
        android:imeOptions="actionGo"
        android:inputType="textUri"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/lebplayer_white"
        android:textColorHint="#ff6b82a8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/lebplayer_btn_qr_code_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lebplayer_btn_bg"
            android:gravity="center"
            android:onClick="onClick"
            android:textColor="@color/lebplayer_white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/lebplayer_ic_qcode" />
    </RelativeLayout>

    <Button
        android:id="@+id/lebplayer_btn_play"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lebplayer_btn_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/lebplayer_start_paly"
        android:textColor="@color/lebplayer_white"
        android:textSize="16sp" />

</LinearLayout>